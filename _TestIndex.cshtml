@model TestPartialView.Models.TextBoxBinding
@using (Html.BeginForm("_TestIndex", "Home"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ValueHolders, (List<TestPartialView.Models.ValueHolder>)Model.ValueHolders)
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <table>
                        <thead>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    <input type="button" id="add" value="Add" class="btn btn-default" />
                                    <input type="button" id="submitButton" value="Submit" class="btn btn-default" />
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-xs-12">
            <table border="0" cellpadding="5">
                <thead>
                    <tr></tr>
                    <tr></tr>
                    <tr></tr>
                </thead>
            </table>
        </div>

        <ul id="txtappend" style="list-style-type: none">
            @for (var i = 0; i < Model.ValueHolders.Count; i++)
            {
                <li style="padding-bottom:15px">
                    <div class="form-group">
                        <div>
                            <table border="0" cellpadding="5">
                                <tbody>
                                    @foreach (var item in Model.ValueHolders)
                                    {
                                        <tr>
                                            <td>
                                                @item.ValueProperty

                                                @*@item.ValueProperty*@

                                                @*<a href="@Url.Action("Delete", new { id = item.ID })">*</a>*@

                                                @*<div oid="@item.ID" mode="0" oids="@item.ID" id="tr@(i)">
                                                    @item.ValueProperty
                                                    <input type="submit" id="del" value="*" class="btn btn-default" />*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
}
